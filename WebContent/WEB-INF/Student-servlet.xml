<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:mvc="http://www.springframework.org/schema/mvc"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd"> 
<context:component-scan base-package="student.controller" /> 
<bean id="viewResolver" 
class="org.springframework.web.servlet.view.InternalResourceViewResolver"> 
<property name="prefix" value="/WEB-INF/pages/" /> 
<property name="suffix" value=".jsp" /> 
</bean> 
<bean id="classDAO" class="student.dao.classes.ClassDAO"/>
<bean id="userDAO" class="student.dao.users.UserDAO"/>
<bean id="studentDAO" class="student.dao.students.StudentDAO"/>
<bean class="org.springframework.context.support.ResourceBundleMessageSource" 
id="messageSource"> 
<property name="basename" value="messages" /> 
</bean>
<mvc:annotation-driven/> 
<mvc:resources mapping="/stylesheets/**" location="/WEB-INF/assets/stylesheets/"/>


<mvc:resources mapping="/javascripts/**" location="/WEB-INF/assets/javascripts/"/>
</beans>